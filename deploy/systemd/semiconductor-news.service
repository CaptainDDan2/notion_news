[Unit]
Description=Semiconductor News Application - Captain DDandDan Service
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/semiconductor-news
Environment=PATH=/opt/semiconductor-news/venv/bin
Environment=FLASK_ENV=production
Environment=OPENAI_API_KEY=your-api-key-here
Environment=SECRET_KEY=your-secret-key-here
Environment=DOMAIN=Captain-ddanddan.com
Environment=HTTPS_ONLY=true
Environment=ALLOWED_HOSTS=Captain-ddanddan.com,www.Captain-ddanddan.com,localhost
Environment=CORS_ORIGINS=https://Captain-ddanddan.com,https://www.Captain-ddanddan.com
Environment=SECURITY_LEVEL=maximum
ExecStart=/opt/semiconductor-news/venv/bin/python main_run.py web
Restart=always
RestartSec=3
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target